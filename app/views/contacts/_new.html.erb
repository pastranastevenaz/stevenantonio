<%= form_for Contact.new do |f| %>
<div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name, :class => "form-control" %><br />
</div>
<div class="form-group">
  <%= f.label :email %><br>
  <%= f.text_field :email, :class => "form-control" %><br />
</div>
<div class="form-group">
  <%= f.label :message %><br>
  <%= f.text_area :message, size: "50x10", :class => "form-control" %>
</div>
<div class="hidden">
  <%= f.label :nickname %><br>
  <%= f.text_field :nickname, :hint => 'leave this area blank' %>
</div>
  <br>
<div class="actions">
  <%= f.submit "Send", class: 'btn btn-primary', id: 'submit-button' %>
</div>

<% end %>
