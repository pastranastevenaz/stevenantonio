<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => user_registration_path) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Name %> <span class="hidden-warning" >Name is required</span>
    <%= f.text_field :name, class: 'form-control', id: 'name-field' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'email-field' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'password-field-1' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: 'password-field-2' %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary', id: 'sign-up-button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
